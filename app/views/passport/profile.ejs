<!-- views/profile.ejs -->
<!doctype html>
<html>
<link rel="stylesheet" type="text/css" href="/assets/css/style.css" />

<head>
    <title>eDot. Profile</title>
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="/assets/css/font-awesome.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body class="profile">
    <div class="container">
        <div class="modal-body row" style="margin-right: -174PX;">
          <div class="col-md-6 col-sm-offset-0" style="margin-top: -78px;margin-left: -89px;">
            <div class="page-header text-center col-sm-12">
                <div style="font-size: 37px;"><span class="fa fa-pen-square"></span> Complete your personal info</div>
                <a href="/logout" class="btn btn-default btn-sm">Logout</a>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="well">
                        <h3><span class="fa fa-user"></span> Local</h3>
                            <p>
                                <strong>id</strong>: <%= user._id %><br>
                                <strong>email</strong>: <%= user.local.email %><br>
                                <strong>password</strong>: <%= user.local.password %>
                            </p>
                    </div>
                </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="row">
                <img src="/assets/img/profile.jpg" style="width: 664px;height: 652px;margin-top: -79px;"> 
            </div>
          </div>
        </div>
        <div class="row">
            <div class="col-sm-4" style="background-color: red;">
            </div>
        </div>
    </div>
</body>
</html>

